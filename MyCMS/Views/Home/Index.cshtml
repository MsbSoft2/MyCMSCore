@using DataLayer.Convertor
@model IEnumerable<DataLayer.Models.Page>
@{
    ViewData["Title"] = "صفحه اصلی";
}

@await Component.InvokeAsync("SliderPageComponents")


<!-- last news -->
<section class="last-news-section border-radius margin-top-60">
    <header><i class="icons icon-doc-2"></i>  <h3>آخرین آخبار ارسالی</h3> </header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="/images/@item.Image">
                <h2>
                    <a asp-controller="Pages" asp-action="ShowPage"
                       asp-route-pageId="@item.PageId" asp-route-title="@item.Title">
                        @item.Title
                    </a>
                </h2>
                <p>
                    @item.ShortDescription
                </p>
                <span class="date-publish">
                    <i class="fa fa-calendar"></i>
                    انتشار : @item.CreateDate.ToShamsi()
                </span>
                <a asp-controller="Pages" asp-action="ShowPage"
                   asp-route-pageId="@item.PageId" asp-route-title="@item.Title" class="more-link"><i class="icons icon-more"></i></a>
            </li>
        }
    </ul>
</section>
<!-- End last news -->