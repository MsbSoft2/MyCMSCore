
@using DataLayer.Convertor
@model IEnumerable<DataLayer.Models.Page>
<!-- most views news -->
<section class="last-news-side border-radius">
    <header><i class="icons icon-star"></i> <h3> پربازدیدترین اخبار </h3></header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="/images/@item.Image">
                <h2>
                    <a asp-controller="Pages" asp-action="ShowPage"
                       asp-route-pageId="@item.PageId"
                       asp-route-title="@item.Title">@item.Title</a>
                </h2>
                <span>انتشار : @item.CreateDate.ToShamsi()</span>
            </li>
        }
    </ul>
</section>
<!-- end most views news -->